@page
@model Pomodoro.Api.Pages.ResetPasswordResultModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Pomodoro | Reset Password</title>
    <style>
        body {display: flex;justify-content: center;
            font-family: Arial, Helvetica, sans-serif;
            text-align: center;}
        h1 {text-decoration: underline;}
        .success {color: cornflowerblue}
        .fail {color: crimson;}
        p {font-size: 20px;}
    </style>
</head>
<body>
    <div>
        @if (Model.IsSuccess)
        {
            <h1 class="success">Dear @Model.Name</h1>
            <p>Your password reset successfully.</p>
        }
        else
        {
            <h1 class="fail">Dear @Model.Name</h1>
            <p>Error occur while reseting your password, please write to support.</p>
        }
    </div>
</body>
</html>
